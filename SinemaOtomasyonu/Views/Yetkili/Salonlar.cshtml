@model SinemaOtomasyonu.Models.Salon

@{
    ViewData["Title"] = "View";
    Layout = "_Layout_Yetkili";
}
<p class="mt-5">
    @*<a class="btn btn-success" asp-controller = "Yetkili" asp-action = "SalonEkle">Salon Ekle</a>*@
    <form asp-controller="Yetkili" asp-action="SalonEkle" method="post">
        <div class="form-group">
            <label class="control-label">Salon Adı : </label>
            <input asp-for="SalonAdi" class="form-control" />
            <span asp-validation-for="SalonAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="au-btn au-btn-icon au-btn--green au-btn--small"><i class="zmdi zmdi-plus"></i> Salon Ekle</button>
        </div>
    </form>
</p>
<table id="myTable" class="table table-borderless table-striped table-earning">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalonAdi)
            </th>
            <th>
                Oluş.Tarihi
            </th>
            <th>
                Gunc.Tarihi
            </th>
            <th>
                Oluş.Kişi
            </th>
            <th>
                Gunc.Kişi
            </th>
            <th>
                Dolu Mu ?
            </th>
            <th class="text-center"> İşlemler </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Salonlar)
        {
            <tr>
                <td>
                    @item.SalonAdi
                </td>

                <td>
                    @item.OlusturmaTarihi.ToShortDateString()
                </td>
                <td>
                    @item.GuncellenmeTarihi
                </td>
                <td>
                    @item.OlusturanKisi
                </td>
                <td>
                    @item.GuncelleyenKisi
                </td>
                <td>
                    @item.AktifMi
                </td>
                <td>
                    <a class="btn btn-secondary" asp-controller="Yetkili" asp-action="SalonDuzenle" asp-route-id="@item.Id">Salon Düzenle</a>
                    <a class="btn btn-danger" asp-action="SalonSil" asp-route-id="@item.Id">Salon Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>