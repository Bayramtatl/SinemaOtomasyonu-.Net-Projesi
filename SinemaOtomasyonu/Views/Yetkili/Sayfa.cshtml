                    </div>
                </div>
            </div>
        </div>
    </div>
    <form asp-controller="Yetkili" asp-action="Bilgiler">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KullaniciAdi" class="control-label"></label>
                <input placeholder="@yetkiliSession.KullaniciAdi" asp-for="KullaniciAdi" class="form-control" />
                <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sifre" class="control-label"></label>
                <input placeholder="@yetkiliSession.Sifre" asp-for="Sifre" class="form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Bilgileri Kaydet</button>
        </div>
    </form>
</div>