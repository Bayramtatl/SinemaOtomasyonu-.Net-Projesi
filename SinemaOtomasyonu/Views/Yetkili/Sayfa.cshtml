@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model SinemaOtomasyonu.Models.Yetkili
@{
    Layout = "_Layout_Yetkili";
    var yetkiliSession = Context.Session.GetObjectFromJson<Yetkili>("Yetkili");
}
<h2 class="mt-2 ml-5 title-1">Güncel İstatistikler</h2>
<div class="row ml-5 mt-5">
    <div class="row m-t-25">
        <div class="col-sm-6 col-lg-3">
            <div class="overview-item overview-item--c1">
                <div class="overview__inner">
                    <div class="overview-box clearfix">
                        <div class="icon">
                            <i class="zmdi zmdi-account-o"></i>
                        </div>
                        <div class="text">
                            <h2>55</h2>
                            <span>Kayıtlı Kişi</span>
                        </div>
                    </div>
